{
    "extends": "../tsconfig.root.json",
    "compilerOptions": {
        "rootDir": "./src",
        "target": "es2020",
        "module": "CommonJS",
        "lib": ["es2017", "es7", "es6", "ESNext"],
        "outDir": "dist",
        "strict": true,
        "declaration": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*", "../declarations.d.ts"]
}
